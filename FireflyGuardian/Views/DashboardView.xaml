        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock
                Margin="20,0,20,50"
                HorizontalAlignment="Center"
                FontSize="16pt"
                FontWeight="Bold"
                Foreground="#fff"
                Text="FIRST STEPS" />
