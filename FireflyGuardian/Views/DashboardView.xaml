                Foreground="#fff" />
            <Button
                x:Name="LoadFromPreviousFile"
                Margin="10"
                HorizontalAlignment="Center"
                Content="Load From Previous Setup File"
                Foreground="#fff" />
        </StackPanel>
    </Grid>
